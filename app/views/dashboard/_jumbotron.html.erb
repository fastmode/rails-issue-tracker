<% if !@tickets.empty? %>
  <h3>Dashboard</h3>  
  <div class="jumbotron">
    <div>
      <h4>Your current open tickets:</h4>
      <ul class="list-group" id="open-tickets"> </ul>  <!-- JSON Data is fed in via dashboard.js -->
      <%= link_to "New Ticket", new_ticket_path, :class=> 'btn btn-sm pull-right btn-success', :id=> 'new-ticket-button' %>
    </div>
  </div>
<% else %>
  <div class="jumbotron">
    <p>Welcome! Please open your first Ticket.</p>
  </div>
<% end %>



<script id="ticket-template" type="text/x-handlebars-template">
  <li class="list-group-item">
    <span class="badge">

    </span>
    <a href="/tickets/{{id}}">{{title}}</a>
  </li>
</script>

<script id="entry-template" type="text/x-handlebars-template">
  <div class="entry">
    <h1>{{title}}</h1>
    <div class="body">
      {{body}}
    </div>
  </div>
</script>