<% if !@tickets.empty? %>
  <div class="jumbotron">
    <div>
      <h4>Your current open tickets:</h4>
      <% @tickets.each do |ticket| %>
        <%= link_to ticket.id, ticket_path(ticket) %> -
        <%= ticket.title %><br>
      <% end%><br>
    </div>
    <div>
      <h4>Reports</h4>    <%# Possibly add new feature to display tickets from Canada, Mexico, USA? %>
      <%= link_to 'Closed and Overdue Tickets', reports_closed_overdue_tickets_path %><br>
      <%= link_to 'USA Tickets', reports_usa_tickets_path %>
    </div>
  </div>
<% else %>
  <div class="jumbotron">
    <p>Welcome! Please open your first Ticket.</p>
  </div>
<% end %>