<% if !@tickets.empty? %>
  <div class="jumbotron">
    <div>
      <h4>Your current open tickets:</h4>
      <ul class="list-group">
        <% @tickets.each do |ticket| %>
          <li class="list-group-item">
            <span class="badge"><%= ticket.issues.size %></span>
            <%= link_to ticket.title, ticket_path(ticket)%>
          </li>
        <% end%><br>
      </ul>
    </div>
    
    <div></div>
  </div>
<% else %>
  <div class="jumbotron">
    <p>Welcome! Please open your first Ticket.</p>
  </div>
<% end %>