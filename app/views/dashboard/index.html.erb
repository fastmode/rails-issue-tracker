<% if !user_signed_in? %>
  <h3>Welcome to Rails Issue Tracker</h3>
  <h5>Please Sign Up or Sign In above!</h5>  
<% else %>
  <h2>Welcome back, <%= @user.email %></h2>
  <% if !@tickets.empty? %>
    <h4>Your current tickets:</h4>
    <% @tickets.each do |ticket| %>
      <li>
        <%= link_to ticket.id, ticket_path(ticket) %> |
        <%= ticket.title %> | 
        <%= ticket.status %>
      </li>
    <% end%>
  <% end %>
<% end %>
