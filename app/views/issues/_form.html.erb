
<%= form_for([@ticket, @issue], :html => {:class => 'form-group'}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, :class => 'form-control', :placeholder => (@issue.errors.full_messages_for(:title).first) %><br>

  <%= f.label :description %>
  <%= f.text_area :description, :class => 'form-control' %><br>

  <%= f.label :due_date %>
  <%= f.date_select :due_date, 
    {order: [:month, :day, :year],
    start_year: 2017,
    end_year: 2100},
    {:class => "form-control"} 
  %><br>

  <%= f.label :status %>
  <%= f.text_field :status, :class => 'form-control' %><br>

  <%= f.label :assigned_to %>
  <%= f.text_field :assigned_to, :class => 'form-control' %><br>
  
  <%= f.submit :class => 'btn btn-default'%>
<% end %>